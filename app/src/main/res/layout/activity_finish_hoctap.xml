<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowbackground">

    <ImageView
        android:id="@+id/imgtrophy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trophy"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txtcongrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgtrophy"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fredokaoneregular"
        android:text="Congratulaton!"
        android:textColor="@color/black"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textquestioncount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtcongrats"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="CORRECT ANSWERS"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtquestiontrue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textquestioncount"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fredokaoneregular"
        android:text="6/6"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tvRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtquestiontrue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="Reward Points"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRP"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_dollar"
        android:drawablePadding="10dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="500"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtfinaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPoints"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/fredokaoneregular"
        android:gravity="center"
        android:text="Perfect Attemp!!"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtfinaltext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="Return"
        android:textSize="30sp" />
</RelativeLayout>